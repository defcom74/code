<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bkgrnd"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         
          android:id="@+id/RelativeLayout01"
                >

         
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ico"
                android:contentDescription="@string/content_des"
                android:layout_marginRight="171dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/screen_title_size"
                android:textColor="@color/title_color"
                android:shadowColor="@color/title_glow"
                android:shadowRadius="5"
                android:shadowDx="3"
                android:shadowDy="3"
				
                android:layout_marginTop="13dp"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ico"
                
                android:contentDescription="@string/content_des"
                android:layout_marginRight="1dp"/>
        
         </RelativeLayout>
         
      <TextView 
          android:id="@+id/TextView_HelpText"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textColor="@color/version_color"
          android:textStyle="bold"
          android:isScrollContainer="true"
		  android:scrollbars="vertical"
		  android:fadingEdgeLength="@dimen/help_text_padding"
		  android:padding="@dimen/help_text_padding"
		  android:drawablePadding="@dimen/help_text_drawable_padding"
		  android:scrollbarStyle="outsideInset"
		  android:linksClickable="true"
		  android:autoLink="web"
		  android:scrollbarAlwaysDrawVerticalTrack="true"
		  android:scrollbarSize="@dimen/help_text_fading"
		            
          />
    
</LinearLayout>